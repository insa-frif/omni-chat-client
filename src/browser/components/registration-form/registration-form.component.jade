md-card
  md-toolbar(color="primary") Registration
  md-card-content
    form("(submit)"="submit($event)")
      table(style="width: 100%", cellspacing="0")
        tr
          td
            md-input(style="width: 100%", "[(ngModel)]"="login", placeholder="Login")
        tr
          td
            md-input(type="password", style="width: 100%", "[(ngModel)]"="password", placeholder="Password")

      input(type="submit",
        "md-raised-button"="",
        title="Join us !",
        "[class.ok]"="login && password",
        "[disabled]"="!login || !password",
        value = "Register"
      )

    .divider

    .centered.awayfromtop(layout-gt-sm="column")
      span Already a member ?
      a("[routerLink]"="['/register']") Sign in !

md-card
  .user-details("*ngIf"="user !== null")
    h2 {{user.name | async}}
    //ul
    //  li("*ngFor"="let acc of user.accounts | async")
    //    h2
    //      span {{acc.name}}
    //      span {{acc.driver}}

  .top-buttons
    a(md-icon-button="", "[routerLink]"="['/chat/add-account']", title="Add Account")
      md-icon.md-24 add
    = " "
    a(md-icon-button="", "[routerLink]"="['/chat/add-discussion']", title="New MetaDiscussion")
      md-icon.md-24 chat
    = " "
    a(md-icon-button="", "[routerLink]"="['/chat/discussion']", title="Discuss")
      md-icon.md-24 forum
    = " "
    a(md-icon-button="", "[routerLink]"="['/chat']", title="Home")
      md-icon.md-24 home


  // h2 Meta
    ul
      li(ngFor...)
  ul("*ngIf"="user !== null")
    li("*ngFor"="let userAccount of user.accounts | async")
      h2
        span {{userAccount.name | async}}
      .discussions
        md-nav-list
          div("*ngFor"="let discussion of userAccount.discussions | async")
            a(md-list-item="", "(click)"="openDiscussion(discussion, $event)", "[routerLink]"="['/chat/discussion']")
              .avatar
              .name  {{discussion.name | async}}
      // .contacts
        md-nav-list
          div("*ngFor"="let contactAccount of userAccount.contactAccounts | async")
            a(md-list-item="", "[routerLink]"="['/chat/discussion']")
              .avatar
              .name  {{contactAccount.name | async}}
